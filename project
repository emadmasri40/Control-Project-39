define F_CPU1000000UL
#include <avr/io.h>
#include <util/delay.h>

int main(void)
{
	DDRA=0b00001111;
	DDRB=0;
	while (1)
	{
		if (PINB==0b00000001)
		{
			PORTA=0b00000001;
			_delay_ms(500);
			PORTA=0b00000011;
			_delay_ms(500);
			PORTA=0b00000111;
			_delay_ms(500);
			PORTA=0b00001111;
			_delay_ms(500);
			PORTA=0;
			_delay_ms(500);
		}
	
	}
  ده كود الل AVR
  
